/*
========================================================================================
    Nextflow config file for running nf-test tests
========================================================================================
*/

// TODO nf-core: Specify any additional parameters here
// Or any resources requirements
params {
    modules_testdata_base_path = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/'
    pipelines_testdata_base_path = 'https://raw.githubusercontent.com/nf-core/test-datasets/refs/heads/pipeline'
    
    outdir = "TESTS/TEST_OUTPUTS/"
    // Local test data paths
    test_data = [
        'test_fastq': "${projectDir}/TESTS/TEST_DATA/test.fastq.gz",
        'test_gfa': "${projectDir}/TESTS/TEST_DATA/test.gfa"
    ]
}

nextflow_process {
    options "-dump-hashes"
}

aws.client.anonymous = true // fixes S3 access issues on self-hosted runners
