nextflow_process {

    name "Test Process GFA2FA"
    script "../main.nf"
    process "GFA2FA"
    tag "modules"
    tag "modules_local"
    tag "gfa2fa"

    test("gfa2fa - convert gfa to fasta") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.test_data['test_gfa'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.fasta,
                    process.out.versions
                ).match() }
            )
        }

    }

    test("gfa2fa - convert gfa to fasta - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['test_gfa'], checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

